<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_size_expanded_style"
    tools:context=".view.fragments.ListFragment">

    <com.google.android.material.textview.MaterialTextView
        style="@style/default_size_fit_style"
        android:id="@+id/infoPlacesList"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textAppearance="@style/regular_text_style"
        android:text="@string/text_info_not_found_places"/>

    <androidx.recyclerview.widget.RecyclerView
        style="@style/default_size_expanded_style"
        android:id="@+id/placesRecyclerView"/>
</FrameLayout>