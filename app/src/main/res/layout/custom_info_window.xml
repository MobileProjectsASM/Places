<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/default_size_height_style"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/place_image_map"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/content_description_place_image_map" />

    <LinearLayout
        style="@style/default_size_height_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_map_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/text_title_info_window"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/address_map_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/text_snippet_info_window"
            android:maxLines="3" />

    </LinearLayout>
</LinearLayout>