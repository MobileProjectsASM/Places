<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_size_height_style"
    android:id="@+id/placeCardView"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        style="@style/default_size_height_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/placeImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"

            tools:src="@drawable/ic_baseline_checklist_24"/>

        <LinearLayout
            style="@style/default_size_height_style"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/default_size_height_style"
                android:id="@+id/namePlaceTextView"
                android:textAppearance="@style/text_subtitle_style"
                android:textColor="@color/primary_color"
                tools:text="@tools:sample/lorem"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/default_size_height_style"
                android:id="@+id/addressPlaceTextView"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/text_info_place_style"
                tools:text="@tools:sample/lorem/random"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/default_size_height_style"
                android:id="@+id/categoriesPlaceTextView"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/text_info_place_style"
                tools:text="@tools:sample/lorem/random"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>