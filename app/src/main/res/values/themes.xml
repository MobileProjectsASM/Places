<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Places" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialAlertDialogTheme">@style/alert_dialog_style</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.Tabs.CircularProgressIndicator</item>
        <item name="textAppearanceLargePopupMenu">@style/textAppearancePopUpMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/textAppearancePopUpMenu</item>
    </style>

    <style name="default_size_height_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="default_size_width_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="default_size_fit_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="default_size_expanded_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- TEXT STYLES -->
    <style name="regular_text_style">
        <item name="android:fontFamily">@font/caviar_dreams</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="text_input_text_error_style">
        <item name="android:fontFamily">@font/caviar_dreams</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/input_text_error_text_size</item>
    </style>

    <style name="text_contained_button_style" parent="regular_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/contained_button_text_size</item>
    </style>

    <style name="text_text_button_style" parent="regular_text_style">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_style" parent="regular_text_style">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_subtitle_style" parent="regular_text_style">
        <item name="android:textSize">@dimen/text_subtitle_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_small_style" parent="regular_text_style">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="text_chip_style" parent="regular_text_style">
        <item name="android:textSize">@dimen/text_chip_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_check_box_style" parent="regular_text_style">
        <item name="android:textSize">@dimen/text_chip_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_info_place_style" parent="regular_text_style">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="text_helper_style" parent="regular_text_style">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="supporting_text_dialog_style" parent="android:TextAppearance.Material.Body2">
        <item name="android:fontFamily">@font/caviar_dreams</item>
    </style>

    <style name="text_title_info_window" parent="text_small_style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_snippet_info_window" parent="text_small_style">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TEXT-INPUT STYLES -->
    <style name="text_input_layout_style">
        <item name="startIconTint">@color/primary_color</item>
        <item name="endIconTint">@color/primary_color</item>
    </style>

    <style name="exposed_drop_down_menu_default_size_height" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="exposed_drop_down_menu" parent="exposed_drop_down_menu_default_size_height">
        <item name="startIconTint">@color/primary_color</item>
    </style>


    <!-- BUTTON STYLES -->
    <style name="contained_button_container_style" parent="default_size_height_style">
        <item name="android:textAppearance">@style/text_contained_button_style</item>
    </style>

    <style name="icon_button_container_style" parent="contained_button_container_style">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">2dp</item>
    </style>

    <style name="outlined_button_container_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/text_contained_button_style</item>
    </style>

    <!-- DIVIDERS -->
    <style name="default_middle_divider" parent="default_size_height_style">
        <item name="dividerColor">@color/secondary_color</item>
        <item name="dividerInsetStart">15dp</item>
        <item name="dividerInsetEnd">15dp</item>
    </style>

    <style name="default_inset_divider" parent="default_size_height_style">
        <item name="dividerColor">@color/secondary_color</item>
        <item name="dividerInsetStart">110dp</item>
    </style>

    <!-- CHIP -->
    <style name="default_chip_style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:textAppearance">@style/text_chip_style</item>
    </style>

    <style name="default_input_chip_style" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/text_chip_style</item>
    </style>

    <!-- DIALOGS -->
    <style name="alert_dialog_style" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/dialog_title_style</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialog_button_style</item>
        <item name="buttonBarNeutralButtonStyle">@style/dialog_button_style</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialog_button_style</item>
    </style>

    <style name="dialog_title_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/caviar_dreams</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_button_style" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/caviar_dreams</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CIRCULAR PROGRESS -->
    <style name="Widget.Tabs.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorSize">60dp</item>
        <item name="trackThickness">30dp</item>
    </style>
    
    <!-- MENU -->
    <style name="textAppearancePopUpMenu" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/caviar_dreams</item>
        <item name="android:fontFamily">@font/caviar_dreams</item>
    </style>

</resources>